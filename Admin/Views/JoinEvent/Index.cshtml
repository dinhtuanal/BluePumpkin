@model List<SharedObjects.ValueObjects.VJoinEvent>

@section Scripts{
    <script src="~/js/prize_distribution.js"></script>
}

<div class="section-wrapper">
    <label class="section-title">Join Event</label>
    <p class="mg-b-20 mg-sm-b-40">List user in events</p>

    <div class="table-wrapper">
        <table id="datatable2" class="table display responsive nowrap">
            <thead>
                <tr>
                    <th class="wd-25p">Event Name</th>
                    <th class="wd-10p">Username</th>
                    <th class="wd-15p">Description</th>
                    <th class="wd-10p">Status</th>
                    <th class="wd-15p">Created by</th>
                    <th class="wd-25p">#</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.EventName</td>
                        <td>@item.UserName</td>
                        <td>@item.Description</td>
                        <td>@item.JoinEventStatus</td>
                        <td>@item.CreatedBy</td>
                        <th>
                            <a href="@Url.Action("update", "joinevent", new{id= @item.JoinEventId})">Edit</a>  |
                            <a href="@Url.Action("delete", "joinevent", new{id= @item.JoinEventId})">Delete</a>   |
                            <a id="distribution" data-toggle="modal" data-target="#addprize" data-id="@item.JoinEventId" data-eventid="@item.EventId" href="#">Trao giai</a>
                        </th>
                    </tr>
                }
            </tbody>
        </table>
    </div><!-- table-wrapper -->
</div>
<div id="addprize" class="modal fade">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content bd-0 bg-transparent rounded overflow-hidden">
            <div class="modal-body pd-0">
                <div class="row no-gutters">
                    <div class="col-lg-6 bg-primary">
                        <div class="pd-40">
                            <h1 class="tx-white mg-b-20">BluePumpkin</h1>
                            <p class="tx-white op-7 mg-b-30">We work with clients big and small across a range of sectors and we utilise all forms of media to get your name out there in a way that’s right for you. We believe that analysis of your company and your customers is key in responding effectively to your promotional needs and we will work with you to fully understand your business to achieve the greatest amount of publicity possible so that you can see a return from the advertising.</p>
                            <p class="tx-white">
                                <span class="tx-uppercase tx-medium d-block mg-b-15">Our Address:</span>
                                <span class="op-7">Ayala Center, Cebu Business Park, Cebu City, Cebu, Philippines 6000</span>
                            </p>
                        </div>
                    </div><!-- col-6 -->
                    <div class="col-lg-6 bg-white">
                        <div class="pd-y-30 pd-xl-x-30">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                            <div class="pd-x-30 pd-y-10">
                                <h3 class="tx-gray-800 tx-normal mg-b-5">Welcome back!</h3>
                                <p>Distribution</p>
                                <br>
                                <div class="form-group">
                                    <input id="email" type="email" name="email" class="form-control pd-y-12" placeholder="Enter your email">
                                </div><!-- form-group -->
                                <div class="form-group">
                                    <select id="status" class="form-control">
                                        <option value="0">InActive</option>
                                        <option value="1">Active</option>
                                    </select>
                                </div><!-- form-group -->
                                <div class="form-group">
                                    <select id="prizes" class="form-control"></select>
                                </div><!-- form-group -->
                                <div class="form-group">
                                    <input id="ranking" type="number" name="ranking" class="form-control pd-y-12" placeholder="Ranking">
                                </div><!-- form-group -->
                                <div class="form-group">
                                    <input id="amount" type="number" name="amount" class="form-control pd-y-12" placeholder="Amount">
                                </div><!-- form-group -->
                                <input id="createdBy" hidden="hidden" value="@User.Identity.Name" />

                                <button id="add" class="btn btn-primary pd-y-12 btn-block">Save</button>

                                <div class="mg-t-30 mg-b-20">Don't have an account yet? <a href="">Sign Up</a></div>
                            </div>
                        </div><!-- pd-20 -->
                    </div><!-- col-6 -->
                </div><!-- row -->
            </div><!-- modal-body -->
        </div><!-- modal-content -->
    </div><!-- modal-dialog -->
</div><!-- modal -->